	{ "keys": ["alt+w"], "command": "move", "args": {"by": "lines", "forward": false} },
	{ "keys": ["alt+s"], "command": "move", "args": {"by": "lines", "forward": true} },
	{ "keys": ["alt+a"], "command": "move", "args": {"by": "characters", "forward": false} },
